#######################################################################
# Check DRC script
#
# cdrc -help for help
#######################################################################


use warnings;
use strict;
use Cwd;
use Cwd 'chdir';
use Getopt::Long ;
use rcommon;

$| = 1;

$SIG{__DIE__} = \&sighandler ;

#######################################################################
# Global variables
#######################################################################

my $prg = $0;
$prg =~ s/.*\/// ;
$prg =~ s/,.*// ;

my $all = 0;
my $drc_q = "";
my $blk_list = "";
my $strict_naming = 0;
my $run_scr = "";
my $blk_dir;

my @blocks = ();
my @block_list = ();

$blk_list = $ENV{DV_ROOT};
$blk_list .= "/tools/synopsys/block.list";
$run_scr = $ENV{DV_ROOT};
$run_scr .= ""; # Not used.

#######################################################################
# Check command line options
#######################################################################

foreach my $argv (@ARGV)
{
    if ($argv =~ /-all/)
    {
	$all = 1;
    } elsif (($argv =~ /-h/) or ($argv =~ /-help/))
    {
	&usage;
	exit(0);
    } elsif ($argv =~ /-strict_naming/) {
    $strict_naming = 1;
    } else 
    {
	push @blocks, $argv;
    }
}

my $blocks_info = process_blocks ($blk_list, $all, \@blocks);
my $count = $blocks_info->{COUNT};
my $block_list_ref = $blocks_info->{MATCHES};
@block_list = @$block_list_ref;
if ($count) {
    print "$prg: Checking DRC for $count modules\n";
} else {
    print "$prg: No matching modules found.\n";
    &usage;
}

my $status = 0;
foreach my $block (@block_list) {
    print "$prg: Checking DRC for $block->{ID}\n";
    my $cmd = "";
    $cmd .= $drc_q;
    $blk_dir = $ENV{DV_ROOT};
    $blk_dir .= "/design/$block->{PATH}/synopsys";
    chdir $blk_dir;
    `rm -rf drc_status.log`;
    die ("DIE. Could not remove drc_status.log file.") if ($?);
    $cmd .= " $ENV{DV_ROOT}/tools/bin/check_log cdrc";
    if (system($cmd) != 0) {
        $status = 1;
    }
}

exit $status;

#######################################################################
sub usage {
    print "\n$prg : Check DRC for OpenPiton\n\n";
    print "Options are :\n";
    print "  -all \n\tto check DRC for all blocks\n";
    print "  -h / -help\n\tto print help\n";
    print "  -strict_naming\n\tto match block name exactly\n\t(block_list must be of size 1)\n";
    print "  block_list :\n\tspecify list of blocks to check DRC\n\n";
    print "Examples:\n\n";
    print "\t$prg -all\n\t$prg fpu_add\n\n";
}
